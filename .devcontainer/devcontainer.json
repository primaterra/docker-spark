{
  "build": {
    "dockerfile": "../.docker/Dockerfile",
    "context": "..",
    "target": "dev",
    "args": {
      "PROJECT_NAME": "${localWorkspaceFolderBasename}"
    }
  },

  "containerEnv":{
    "SEMANTIC_RELEASE_IS_DEV": "true"
  },

  "postCreateCommand": "bash scripts/post-create-setup.sh",

  "customizations": {
    "vscode": {

      "extensions": [
        "databricks.databricks",
        "charliermarsh.ruff"
      ]

    }
  }
}
